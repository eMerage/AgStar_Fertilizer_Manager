<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/card_view"
                                   style="@style/CardViewStyle"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentTop="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginLeft="5dp"
                                   android:layout_marginRight="5dp"
                                   android:layout_marginTop="10dp"
>

    <RelativeLayout
            android:id="@+id/relativeLayout_header_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="5dp">


        <TextView
                android:id="@+id/textview_dealername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_dealercode"
                android:layout_alignLeft="@+id/textview_dealercode"
                android:layout_alignTop="@+id/montserratRegular8"
                app:fontFamily="@font/roboto_light"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/montserratRegular8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_dealernumber"
                app:fontFamily="@font/roboto_bold"
                android:layout_alignStart="@+id/montserratRegular2"
                android:layout_alignLeft="@+id/montserratRegular2"
                android:layout_marginTop="5dp"
                android:text="Name  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/textview_dealernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_dealercode"
                app:fontFamily="@font/roboto_light"
                android:layout_alignLeft="@+id/textview_dealercode"
                android:layout_alignTop="@+id/montserratRegular7"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/montserratRegular7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_dealercode"
                app:fontFamily="@font/roboto_bold"
                android:layout_alignStart="@+id/montserratRegular2"
                android:layout_alignLeft="@+id/montserratRegular2"
                android:layout_marginTop="5dp"
                android:text="Number  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/textview_dealercode"
                android:layout_width="wrap_content"
                app:fontFamily="@font/roboto_light"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/montserratRegular2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="80dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/montserratRegular2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapView"
                android:layout_alignParentStart="true"
                app:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="Code  "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"/>

        <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="130dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>


